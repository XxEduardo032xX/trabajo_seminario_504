@model IEnumerable<app_ds501.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listado de Clientes</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-success" asp-controller="Cliente" asp-action="Create">Agregar Cliente</a>
        </div>
    </div>

    <br />

    <div class="row">
        @if (Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>@Html.DisplayNameFor(cli => cli.codigo_cliente)</td>
                            <td>@Html.DisplayNameFor(cli => cli.identificacion)</td>
                            <td>@Html.DisplayNameFor(cli => cli.nombre)</td>
                            <td>@Html.DisplayNameFor(cli => cli.telefono)</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reg in Model)
                        {
                            <tr>
                                <td>@reg.codigo_cliente</td>
                                <td>@reg.identificacion</td>
                                <td>@reg.nombre</td>
                                <td>@reg.telefono</td>
                                <td>
                                    <a asp-controller="Cliente" asp-action="Edit"
                                       asp-route-id="@reg.codigo_cliente" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>

                                    <a asp-controller="Cliente" asp-action="Delete"
                                       asp-route-id="@reg.codigo_cliente" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No existen registros</p>
        }
    </div>

</div>
